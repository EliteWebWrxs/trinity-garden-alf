---
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="footer-top">
    <div class="container">
      <div class="footer-grid">
        <div class="footer-col">
          <div class="footer-logo">
            <span class="logo-text">Trinity Garden</span>
            <span class="logo-subtitle">Assisted Living</span>
          </div>
          <p class="footer-description">
            Providing compassionate, personalized care in a warm, home-like environment where seniors thrive.
          </p>
        </div>

        <div class="footer-col">
          <h4 class="footer-title">Quick Links</h4>
          <ul class="footer-links">
            <li><a href="/">Home</a></li>
            <li><a href="/about">About Us</a></li>
            <li><a href="/services">Services</a></li>
            <li><a href="/gallery">Gallery</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div>

        <div class="footer-col">
          <h4 class="footer-title">Services</h4>
          <ul class="footer-links">
            <li><a href="/services#assisted-living">Assisted Living</a></li>
            <li><a href="/services#memory-care">Memory Care</a></li>
            <li><a href="/services#respite-care">Respite Care</a></li>
            <li><a href="/services#personal-care">Personal Care</a></li>
          </ul>
        </div>

        <div class="footer-col">
          <h4 class="footer-title">Contact Us</h4>
          <ul class="footer-contact">
            <li>
              <strong>Phone:</strong><br />
              <a href="tel:+1-XXX-XXX-XXXX">(XXX) XXX-XXXX</a>
            </li>
            <li>
              <strong>Email:</strong><br />
              <a href="mailto:info@trinitygardenalf.com">info@trinitygardenalf.com</a>
            </li>
            <li>
              <strong>Address:</strong><br />
              123 Trinity Garden Lane<br />
              Your City, State 12345
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-content">
        <p>&copy; {currentYear} Trinity Garden Assisted Living. All rights reserved.</p>
        <div class="footer-bottom-links">
          <a href="/privacy">Privacy Policy</a>
          <a href="/terms">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-black);
    color: var(--color-text-on-dark);
  }

  .footer-top {
    padding: var(--spacing-3xl) 0 var(--spacing-2xl);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1.5fr;
    gap: var(--spacing-xl);
  }

  .footer-logo {
    display: flex;
    flex-direction: column;
    margin-bottom: var(--spacing-md);
  }

  .footer-logo .logo-text {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-accent);
    line-height: 1;
  }

  .footer-logo .logo-subtitle {
    font-family: var(--font-primary);
    font-size: 0.75rem;
    color: var(--color-text-on-dark);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-top: 0.25rem;
    opacity: 0.8;
  }

  .footer-description {
    color: var(--color-text-on-dark);
    opacity: 0.8;
    line-height: 1.6;
  }

  .footer-title {
    font-family: var(--font-heading);
    font-size: var(--font-size-lg);
    color: var(--color-accent);
    margin-bottom: var(--spacing-md);
  }

  .footer-links,
  .footer-contact {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li,
  .footer-contact li {
    margin-bottom: var(--spacing-sm);
  }

  .footer-links a,
  .footer-contact a {
    color: var(--color-text-on-dark);
    text-decoration: none;
    opacity: 0.8;
    transition: all var(--transition-base);
  }

  .footer-links a:hover,
  .footer-contact a:hover {
    opacity: 1;
    color: var(--color-accent);
    padding-left: 5px;
  }

  .footer-contact li {
    margin-bottom: var(--spacing-md);
  }

  .footer-contact strong {
    color: var(--color-accent);
    font-weight: 600;
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: var(--spacing-lg) 0;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--spacing-md);
  }

  .footer-bottom p {
    margin: 0;
    opacity: 0.6;
    font-size: var(--font-size-sm);
  }

  .footer-bottom-links {
    display: flex;
    gap: var(--spacing-lg);
  }

  .footer-bottom-links a {
    color: var(--color-text-on-dark);
    text-decoration: none;
    opacity: 0.6;
    font-size: var(--font-size-sm);
    transition: opacity var(--transition-base);
  }

  .footer-bottom-links a:hover {
    opacity: 1;
  }

  /* Mobile Styles */
  @media (max-width: 1024px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 640px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .footer-bottom-links {
      justify-content: center;
    }
  }
</style>
