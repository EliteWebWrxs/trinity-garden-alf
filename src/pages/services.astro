---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import serviceHero from "../assets/service-hero.webp";
import personalCare from "../assets/personal-care.webp";
import respiteCare from "../assets/respite-care.webp";
import memoryCare from "../assets/memory-care.webp";
import artsCrafts from "../assets/arts-crafts.webp";
import assistedLiving from "../assets/assisted-living.webp";
import healthCoordination from "../assets/healthcare-coordination.webp";

export const prerender = true;
---

<!-- <div>
  <h1>Coming soon</h1>
</div> -->
<Layout
  title="Senior Care Services | Assisted Living, Adult Daycare & More | Trinity Garden"
  description="Comprehensive senior care services including assisted living, adult daycare, personal care, medication management, nutritious dining, activities, respite care, and healthcare coordination. Personalized care plans for every resident."
  keywords="assisted living services, adult daycare services, personal care, medication management, senior activities, respite care, healthcare coordination, elderly care services"
  schema={{
    "@context": "https://schema.org",
    "@type": "ItemList",
    name: "Senior Care Services",
    description:
      "Comprehensive care services offered at Trinity Garden Assisted Living",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        item: {
          "@type": "Service",
          name: "Assisted Living",
          description:
            "24/7 professional staff support with daily activities while maintaining independence",
          provider: {
            "@type": "AssistedLivingFacility",
            name: "Trinity Garden Assisted Living",
          },
        },
      },
      {
        "@type": "ListItem",
        position: 2,
        item: {
          "@type": "Service",
          name: "Adult Daycare",
          description:
            "Professional daytime care and supervision in a safe, engaging environment",
          provider: {
            "@type": "AssistedLivingFacility",
            name: "Trinity Garden Assisted Living",
          },
        },
      },
      {
        "@type": "ListItem",
        position: 3,
        item: {
          "@type": "Service",
          name: "Personal Care",
          description:
            "Compassionate assistance with activities of daily living",
          provider: {
            "@type": "AssistedLivingFacility",
            name: "Trinity Garden Assisted Living",
          },
        },
      },
      {
        "@type": "ListItem",
        position: 4,
        item: {
          "@type": "Service",
          name: "Medication Management",
          description:
            "Professional oversight ensuring medications are taken correctly",
          provider: {
            "@type": "AssistedLivingFacility",
            name: "Trinity Garden Assisted Living",
          },
        },
      },
    ],
  }}
>
  <Header />

  <Hero
    title="Our Services"
    description="Comprehensive, personalized care designed to support every aspect of senior living"
    backgroundImage={serviceHero.src}
    primaryCTA={{
      text: "Schedule a Tour",
      href: "/contact",
      class: "btn-green",
    }}
    secondaryCTA={{ text: "Contact Us", href: "/contact", class: "btn-light" }}
  />

  <main>
    <section class="services-overview">
      <div class="container">
        <div class="section-header text-center">
          <h2>Caring for Every Aspect of Senior Living</h2>
          <p class="section-description">
            At Trinity Garden, we provide a full spectrum of services designed
            to meet the unique needs of each resident while promoting
            independence, dignity, and quality of life.
          </p>
        </div>
      </div>
    </section>

    <section class="service-detail" id="assisted-living">
      <div class="container">
        <div class="service-content">
          <div class="service-image">
            <img
              src={assistedLiving.src}
              alt="Assisted living care at Trinity Garden"
              loading="lazy"
            />
          </div>
          <div class="service-text">
            <h2>Assisted Living</h2>
            <p class="lead">
              Support when you need it, independence when you don't. Our
              assisted living services strike the perfect balance between
              personalized care and personal freedom.
            </p>
            <ul class="service-features">
              <li>24/7 professional staff support</li>
              <li>
                Assistance with daily activities (bathing, dressing, grooming)
              </li>
              <li>Medication management and reminders</li>
              <li>Housekeeping and laundry services</li>
              <li>Transportation to appointments and outings</li>
              <li>Personalized care plans reviewed regularly</li>
              <li>Emergency call systems in every suite</li>
              <li>Coordinated healthcare with physicians</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail section-alt" id="adult-daycare">
      <div class="container">
        <div class="service-content reverse">
          <div class="service-image">
            <Image
              src={memoryCare}
              alt="Adult daycare services at Trinity Garden"
              loading="lazy"
              width={800}
              height={600}
              quality={80}
            />
          </div>
          <div class="service-text">
            <h2>Adult Daycare</h2>
            <p class="lead">
              Professional daytime care and supervision in a safe, engaging
              environment for adults who need assistance during the day.
            </p>
            <ul class="service-features">
              <li>Safe, supervised environment</li>
              <li>Trained staff specializing in adult care</li>
              <li>Social and recreational activities</li>
              <li>Nutritious meals and snacks included</li>
              <li>Medication management and monitoring</li>
              <li>Transportation services available</li>
              <li>Flexible scheduling options</li>
              <li>Relief for family caregivers</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail" id="personal-care">
      <div class="container">
        <div class="service-content">
          <div class="service-image">
            <Image
              src={personalCare}
              alt="Personal care services"
              loading="lazy"
              width={800}
              height={600}
              quality={80}
            />
          </div>
          <div class="service-text">
            <h2>Personal Care</h2>
            <p class="lead">
              Compassionate, dignified assistance with activities of daily
              living, tailored to each resident's individual needs and
              preferences.
            </p>
            <ul class="service-features">
              <li>Bathing and personal hygiene assistance</li>
              <li>Dressing and grooming support</li>
              <li>Mobility and transfer assistance</li>
              <li>Toileting and incontinence care</li>
              <li>Eating assistance when needed</li>
              <li>Respectful, gentle care approach</li>
              <li>Maintaining dignity and independence</li>
              <li>Flexible care adapted to changing needs</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail section-alt" id="medication-management">
      <div class="container">
        <div class="service-content reverse">
          <div class="service-image">
            <img
              src="https://images.unsplash.com/photo-1584308666744-24d5c474f2ae?w=800&q=80"
              alt="Medication management"
              loading="lazy"
            />
          </div>
          <div class="service-text">
            <h2>Medication Management</h2>
            <p class="lead">
              Professional oversight ensuring medications are taken correctly
              and on schedule for optimal health outcomes and peace of mind.
            </p>
            <ul class="service-features">
              <li>Registered nurse oversight</li>
              <li>Medication administration and monitoring</li>
              <li>Prescription refill coordination</li>
              <li>Drug interaction monitoring</li>
              <li>Communication with physicians and pharmacies</li>
              <li>Detailed medication tracking and records</li>
              <li>Education for residents and families</li>
              <li>Over-the-counter medication guidance</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail" id="dining">
      <div class="container">
        <div class="service-content">
          <div class="service-image">
            <img
              src="https://images.unsplash.com/photo-1547592180-85f173990554?w=800&q=80"
              alt="Dining services at Trinity Garden"
              loading="lazy"
            />
          </div>
          <div class="service-text">
            <h2>Nutritious Dining</h2>
            <p class="lead">
              Chef-prepared, restaurant-quality meals served in our elegant
              dining room, with attention to nutrition, taste, and dietary
              needs.
            </p>
            <ul class="service-features">
              <li>Three meals daily plus snacks</li>
              <li>Fresh, locally-sourced ingredients</li>
              <li>Accommodations for dietary restrictions</li>
              <li>Heart-healthy and diabetic-friendly options</li>
              <li>Texture-modified meals when needed</li>
              <li>Beautiful dining room atmosphere</li>
              <li>Flexible dining times</li>
              <li>Special occasion meals and celebrations</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail section-alt" id="activities">
      <div class="container">
        <div class="service-content reverse">
          <div class="service-image">
            <img
              src={artsCrafts.src}
              alt="Activities and engagement programs"
              loading="lazy"
            />
          </div>
          <div class="service-text">
            <h2>Activities & Engagement</h2>
            <p class="lead">
              A rich calendar of social, recreational, and wellness activities
              designed to enrich mind, body, and spirit while fostering
              community connections.
            </p>
            <ul class="service-features">
              <li>Daily planned activities and events</li>
              <li>Exercise and fitness programs</li>
              <li>Arts, crafts, and creative expression</li>
              <li>Music therapy and entertainment</li>
              <li>Educational programs and lectures</li>
              <li>Games, puzzles, and brain fitness</li>
              <li>Gardening and nature activities</li>
              <li>Community outings and field trips</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail" id="respite-care">
      <div class="container">
        <div class="service-content">
          <div class="service-image">
            <Image
              src={respiteCare}
              alt="Respite care services"
              loading="lazy"
              width={800}
              height={600}
              quality={80}
            />
          </div>
          <div class="service-text">
            <h2>Respite Care</h2>
            <p class="lead">
              Short-term stays providing family caregivers with a well-deserved
              break while ensuring their loved ones receive excellent care.
            </p>
            <ul class="service-features">
              <li>Flexible stays from days to weeks</li>
              <li>All assisted living services included</li>
              <li>Trial experience for potential residents</li>
              <li>Relief for family caregivers</li>
              <li>Post-hospital recovery support</li>
              <li>Seasonal or vacation care</li>
              <li>Seamless transition process</li>
              <li>Same high standards of care</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail section-alt" id="healthcare">
      <div class="container">
        <div class="service-content reverse">
          <div class="service-image">
            <img
              src={healthCoordination.src}
              alt="Healthcare coordination services"
              loading="lazy"
            />
          </div>
          <div class="service-text">
            <h2>Healthcare Coordination</h2>
            <p class="lead">
              Comprehensive coordination of medical care, working closely with
              healthcare providers to ensure residents' health and wellness.
            </p>
            <ul class="service-features">
              <li>On-site health assessments</li>
              <li>Coordination with physicians and specialists</li>
              <li>Transportation to medical appointments</li>
              <li>Physical therapy arrangements</li>
              <li>Hospice care coordination when needed</li>
              <li>Health monitoring and vitals checks</li>
              <li>Wound care and treatment management</li>
              <li>Family health updates and communication</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>Learn More About Our Services</h2>
          <p>
            Schedule a personal tour to see our services in action and discover
            how Trinity Garden can be the perfect home for your loved one.
          </p>
          <div class="cta-buttons">
            <a href="/contact" class="btn btn-green btn-large"
              >Schedule a Tour</a
            >
            <a href="tel:+1-813-467-9393" class="btn btn-light btn-large"
              >Call (813) 467-9393</a
            >
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
<style>
  /* Services Overview */
  .services-overview {
    padding: var(--spacing-2xl) 0;
  }

  .section-header h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .section-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-light);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* Service Details */
  .service-detail {
    padding: var(--spacing-3xl) 0;
  }

  .service-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
  }

  .service-content.reverse {
    direction: rtl;
  }

  .service-content.reverse > * {
    direction: ltr;
  }

  .service-image {
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
  }

  .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    min-height: 400px;
  }

  .service-text h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .lead {
    font-size: var(--font-size-lg);
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-lg);
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-features li {
    padding: var(--spacing-sm) 0;
    padding-left: 2rem;
    position: relative;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .service-features li::before {
    content: "âœ“";
    position: absolute;
    left: 0;
    color: var(--color-secondary);
    font-weight: bold;
    font-size: 1.25rem;
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-primary-dark) 100%
    );
    color: var(--color-white);
    padding: var(--spacing-3xl) 0;
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-white);
    margin-bottom: var(--spacing-md);
  }

  .cta-content p {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-xl);
    opacity: 0.95;
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .service-content,
    .service-content.reverse {
      grid-template-columns: 1fr;
      direction: ltr;
    }

    .service-image {
      order: -1;
    }

    .service-image img {
      min-height: 300px;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-buttons .btn {
      width: 100%;
    }
  }
</style>
