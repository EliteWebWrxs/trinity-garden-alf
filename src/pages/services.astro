---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";
import serviceHero from "../assets/Boomer-Group.jpg";
import personalCare from "../assets/personal.jpg";
import respiteCare from "../assets/respite.jpeg";
import memoryCare from "../assets/safe.jpg";
import artsCrafts from "../assets/arts-crafts.webp";
import assistedLiving from "../assets/assisted.jpeg";
import healthCoordination from "../assets/General-medicine.jpg";
import med from "../assets/med.png";
import dinning from "../assets/dinning.jpg";

export const prerender = true;
---

<!-- <div>
  <h1>Coming soon</h1>
</div> -->
<Layout
  title="Senior Care Services | Assisted Living, Adult Daycare & More | Trinity Garden"
  description="Comprehensive senior care services including assisted living, adult daycare, personal care, medication management, nutritious dining, activities, respite care, and healthcare coordination. Personalized care plans for every resident."
  keywords="assisted living services, adult daycare services, personal care, medication management, senior activities, respite care, healthcare coordination, elderly care services"
  schema={{
    "@context": "https://schema.org",
    "@type": "ItemList",
    name: "Senior Care Services",
    description:
      "Comprehensive care services offered at Trinity Garden Assisted Living",
    itemListElement: [
      {
        "@type": "ListItem",
        position: 1,
        item: {
          "@type": "Service",
          name: "Assisted Living",
          description:
            "24/7 professional staff support with daily activities while maintaining independence",
          provider: {
            "@type": "AssistedLivingFacility",
            name: "Trinity Garden Assisted Living",
          },
        },
      },
      {
        "@type": "ListItem",
        position: 2,
        item: {
          "@type": "Service",
          name: "Adult Daycare",
          description:
            "Professional daytime care and supervision in a safe, engaging environment",
          provider: {
            "@type": "AssistedLivingFacility",
            name: "Trinity Garden Assisted Living",
          },
        },
      },
      {
        "@type": "ListItem",
        position: 3,
        item: {
          "@type": "Service",
          name: "Personal Care",
          description:
            "Compassionate assistance with activities of daily living",
          provider: {
            "@type": "AssistedLivingFacility",
            name: "Trinity Garden Assisted Living",
          },
        },
      },
      {
        "@type": "ListItem",
        position: 4,
        item: {
          "@type": "Service",
          name: "Medication Management",
          description:
            "Professional oversight ensuring medications are taken correctly",
          provider: {
            "@type": "AssistedLivingFacility",
            name: "Trinity Garden Assisted Living",
          },
        },
      },
    ],
  }}
>
  <Header />

  <Hero
    title="Our Services"
    description="Comprehensive, personalized care designed to support every aspect of senior living"
    backgroundImage={serviceHero.src}
    primaryCTA={{
      text: "Schedule a Tour",
      href: "/contact",
      class: "btn-green",
    }}
    secondaryCTA={{ text: "Contact Us", href: "/contact", class: "btn-light" }}
  />

  <main>
    <section class="services-overview">
      <div class="container">
        <div class="section-header text-center">
          <h2>Caring for Every Aspect of Senior Living</h2>
          <p class="section-description">
            At Trinity Garden, we offer a full range of supportive services
            tailored to each resident's individual needs—promoting independence,
            preserving dignity, and enhancing quality of life in a safe,
            nurturing home environment.
          </p>
        </div>
      </div>
    </section>

    <section class="service-detail" id="assisted-living">
      <div class="container">
        <div class="service-content">
          <div class="service-image">
            <img
              src={assistedLiving.src}
              alt="Assisted living care at Trinity Garden"
              loading="lazy"
            />
          </div>
          <div class="service-text">
            <h2>Assisted Living</h2>
            <p class="lead">
              Support when you need it, independence when you don’t. Our
              assisted living services provide the right balance of personalized
              care and personal freedom—so residents feel safe, respected, and
              at home.
            </p>
            <ul class="service-features">
              <li>24/7 supportive, trained staff</li>
              <li>
                Assistance with activities of daily living (bathing, dressing,
                grooming)
              </li>
              <li>Medication administrations and coordination support</li>
              <li>Housekeeping and laundry services</li>
              <li>Transportation arrangements for appointments and outings</li>
              <li>Personalized care plans reviewed regularly</li>
              <li>Emergency response support for added safety</li>
              <li>Coordinated care with physicians and healthcare providers</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail section-alt" id="adult-daycare">
      <div class="container">
        <div class="service-content reverse">
          <div class="service-image">
            <Image
              src={memoryCare}
              alt="Adult daycare services at Trinity Garden"
              loading="lazy"
              width={800}
              height={600}
              quality={80}
            />
          </div>
          <div class="service-text">
            <h2>Safe & Comfort</h2>
            <p class="lead">
              A safe, comfortable home setting with attentive support, fall
              prevention, and daily home-style services—designed to promote
              peace of mind for residents and families.
            </p>
            <ul class="service-features">
              <li>
                Safe, supervised environment with 24/7 supportive oversight
              </li>
              <li>
                Fall prevention support and mobility-friendly spaces to reduce
                risk
              </li>
              <li>
                Trained, compassionate staff experienced in adult and senior
                care
              </li>
              <li>
                Relief for family caregivers through consistent, dependable
                support
              </li>
              <li>
                Ongoing family updates and open communication for peace of mind
              </li>
              <li>
                Free Wi-Fi access to help residents stay connected with family
                and friends
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail" id="personal-care">
      <div class="container">
        <div class="service-content">
          <div class="service-image">
            <Image
              src={personalCare}
              alt="Personal care services"
              loading="lazy"
              width={800}
              height={600}
              quality={80}
            />
          </div>
          <div class="service-text">
            <h2>Personal Care</h2>
            <p class="lead">
              Compassionate, dignified assistance with activities of daily
              living—personalized to each resident's unique needs, routines, and
              preferences.
            </p>
            <ul class="service-features">
              <li>Bathing and personal hygiene assistance</li>
              <li>Dressing and grooming support</li>
              <li>Mobility and transfer assistance</li>
              <li>Toileting and incontinence care</li>
              <li>Eating assistance when needed</li>
              <li>Respectful, gentle approach to care</li>
              <li>Support that promotes dignity and independence</li>
              <li>Flexible care plans that adapt as needs change</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail section-alt" id="medication-management">
      <div class="container">
        <div class="service-content reverse">
          <div class="service-image">
            <Image
              src={med}
              alt="Medication management"
              loading="lazy"
              width={800}
              height={600}
              quality={80}
            />
          </div>
          <div class="service-text">
            <h2>Medication Management</h2>
            <p class="lead">
              Professional oversight to ensure medications are administered
              safely, accurately, and on schedule—supporting better health
              outcomes and peace of mind for residents and families.
            </p>
            <ul class="service-features">
              <li>Registered nurse oversight and support</li>
              <li>Medication administration and routine monitoring</li>
              <li>
                Prescription refill coordination and pharmacy communication
              </li>
              <li>
                Medication review for potential interactions and side effects
              </li>
              <li>Coordination with physicians for updates and changes</li>
              <li>Detailed medication documentation and tracking</li>
              <li>Education and updates for residents and families</li>
              <li>
                Guidance on approved over-the-counter medications (as
                appropriate)
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail" id="dining">
      <div class="container">
        <div class="service-content">
          <div class="service-image">
            <Image
              src={dinning}
              alt="Dining services at Trinity Garden"
              loading="lazy"
              width={800}
              height={600}
              quality={80}
            />
          </div>
          <div class="service-text">
            <h2>Nutritious Dining</h2>
            <p class="lead">
              Dietitian-created menus and trained kitchen staff provide
              home-style meals in a comfortable dining setting—crafted with
              attention to nutrition, taste, and each resident's individual
              dietary needs.
            </p>
            <ul class="service-features">
              <li>
                Three balanced meals daily, plus snacks and hydration support
              </li>
              <li>
                Accommodations for dietary restrictions and physician-ordered
                diets
              </li>
              <li>Heart-healthy and diabetic-friendly options available</li>
              <li>
                Texture-modified meals as needed (mechanical soft, puréed, etc.)
              </li>
              <li>
                Welcoming dining room atmosphere that encourages social
                connection
              </li>
              <li>
                Flexible dining support based on resident routines and care
                needs
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail section-alt" id="activities">
      <div class="container">
        <div class="service-content reverse">
          <div class="service-image">
            <img
              src={artsCrafts.src}
              alt="Activities and engagement programs"
              loading="lazy"
            />
          </div>
          <div class="service-text">
            <h2>Wellness & Activities</h2>
            <p class="lead">
              A vibrant calendar of social, recreational, and wellness
              opportunities designed to support the mind, body, and spirit—while
              building meaningful connections and a true sense of community.
            </p>
            <ul class="service-features">
              <li>Gentle exercise, movement, and wellness programs</li>
              <li>Daily planned activities and special events</li>
              <li>Arts, crafts, and creative expression</li>
              <li>Music, entertainment, and therapeutic engagement</li>
              <li>Educational programs, discussions, and enrichment topics</li>
              <li>Games, puzzles, and cognitive stimulation activities</li>
              <li>Outdoor time and nature-based activities (as appropriate)</li>
              <li>Community outings and supervised field trips</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail" id="respite-care">
      <div class="container">
        <div class="service-content">
          <div class="service-image">
            <Image
              src={respiteCare}
              alt="Respite care services"
              loading="lazy"
              width={800}
              height={600}
              quality={80}
            />
          </div>
          <div class="service-text">
            <h2>Respite Care</h2>
            <p class="lead">
              Short-term stays that give family caregivers a well-deserved
              break—while ensuring their loved one receives attentive,
              high-quality care in a safe and comfortable home environment.
            </p>
            <ul class="service-features">
              <li>Flexible stays available (days to weeks)</li>
              <li>Access to all assisted living services during the stay</li>
              <li>Ideal for caregiver relief and peace of mind</li>
              <li>
                Trial stay option for families considering long-term placement
              </li>
              <li>
                Support for post-hospital recovery and short-term supervision
                needs
              </li>
              <li>Seasonal, vacation, or temporary care solutions</li>
              <li>Smooth, seamless transition and move-in support</li>
              <li>
                The same high standards of care provided to every resident
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="service-detail section-alt" id="healthcare">
      <div class="container">
        <div class="service-content reverse">
          <div class="service-image">
            <img
              src={healthCoordination.src}
              alt="Healthcare coordination services"
              loading="lazy"
            />
          </div>
          <div class="service-text">
            <h2>Healthcare Coordination</h2>
            <p class="lead">
              Comprehensive coordination of medical care—working closely with
              healthcare providers to support each resident's health, comfort,
              and overall well-being.
            </p>
            <ul class="service-features">
              <li>On-site health assessments and routine wellness checks</li>
              <li>
                Access to facility medical providers, minimizing the need to
                leave the home
              </li>
              <li>
                Assistance with transportation arrangements for appointments
                when needed
              </li>
              <li>
                Physical therapy and rehabilitation coordination (as
                appropriate)
              </li>
              <li>
                Hospice care coordination and supportive services when indicated
              </li>
              <li>
                Ongoing health monitoring, vitals checks, and daily observation
              </li>
              <li>
                Wound care support and treatment plan follow-through as ordered
              </li>
              <li>
                Regular family communication and health updates for peace of
                mind
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <section class="cta-section">
      <div class="container">
        <div class="cta-content">
          <h2>Learn More About Our Services</h2>
          <p>
            Schedule a personal tour to see our services in action and discover
            how Trinity Garden can be the perfect home for your loved one.
          </p>
          <div class="cta-buttons">
            <a href="/contact" class="btn btn-green btn-large"
              >Schedule a Tour</a
            >
            <a href="tel:+1-813-467-9393" class="btn btn-light btn-large"
              >Call (813) 467-9393</a
            >
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
<style>
  /* Services Overview */
  .services-overview {
    padding: var(--spacing-2xl) 0;
  }

  .section-header h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .section-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-light);
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* Service Details */
  .service-detail {
    padding: var(--spacing-3xl) 0;
  }

  .service-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2xl);
    align-items: center;
  }

  .service-content.reverse {
    direction: rtl;
  }

  .service-content.reverse > * {
    direction: ltr;
  }

  .service-image {
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
  }

  .service-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    min-height: 400px;
  }

  .service-text h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .lead {
    font-size: var(--font-size-lg);
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-lg);
  }

  .service-features {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .service-features li {
    padding: var(--spacing-sm) 0;
    padding-left: 2rem;
    position: relative;
    color: var(--color-text-secondary);
    line-height: 1.6;
  }

  .service-features li::before {
    content: ".";
    position: absolute;
    left: 0;
    color: var(--color-secondary);
    font-weight: bold;
    font-size: 1.25rem;
  }

  /* CTA Section */
  .cta-section {
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-primary-dark) 100%
    );
    color: var(--color-white);
    padding: var(--spacing-3xl) 0;
  }

  .cta-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .cta-content h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-white);
    margin-bottom: var(--spacing-md);
  }

  .cta-content p {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-xl);
    opacity: 0.95;
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .service-content,
    .service-content.reverse {
      grid-template-columns: 1fr;
      direction: ltr;
    }

    .service-image {
      order: -1;
    }

    .service-image img {
      min-height: 300px;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .cta-buttons .btn {
      width: 100%;
    }
  }
</style>
