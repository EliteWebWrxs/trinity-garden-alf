<Layout
  title="Photo Gallery | Tour Trinity Garden Assisted Living Facility"
  description="Take a virtual tour of Trinity Garden Assisted Living. View photos of our beautiful facility, private suites, common areas, elegant dining rooms, outdoor spaces, and activity programs. See where your loved one will call home."
  keywords="assisted living photos, facility tour, senior living gallery, adult daycare facility, private suites, assisted living amenities, virtual tour"
  schema={{
    "@context": "https://schema.org",
    "@type": "ImageGallery",
    name: "Trinity Garden Assisted Living Photo Gallery",
    description:
      "Photos showcasing our beautiful facility, suites, amenities, and community",
    about: {
      "@type": "AssistedLivingFacility",
      name: "Trinity Garden Assisted Living",
    },
  }}
>
  <Header />

  <Hero
    title="Tour Our Community"
    description="Experience the warmth and beauty of Trinity Garden through our photo gallery"
    backgroundImage={galleryHero.src}
    primaryCTA={{
      text: "Schedule a Visit",
      href: "/contact",
      class: "btn-green",
    }}
    secondaryCTA={{ text: "Contact Us", href: "/contact", class: "btn-light" }}
  />

  <main>
    <section class="gallery-intro">
      <div class="container-narrow">
        <div class="text-center">
          <h2>Welcome to Trinity Garden</h2>
          <p class="lead">
            Pictures speak louder than words. Browse our gallery to see the
            warm, inviting atmosphere that makes Trinity Garden feel like home.
            From our elegant common areas to private suites and beautiful
            outdoor spaces, every detail has been thoughtfully designed for
            comfort and safety.
          </p>
          <p class="cta-text">
            We invite you to schedule a personal tour to experience our
            community in person and meet our wonderful staff and residents.
          </p>
        </div>
      </div>
    </section>

    <section class="gallery-section" id="community">
      <div class="container">
        <div class="section-header text-center">
          <h2>Community Spaces</h2>
          <p class="section-description">
            Elegant, comfortable gathering areas designed to foster connection
            and community
          </p>
        </div>
        <div class="gallery-grid gallery-grid-2">
          {
            galleryImages.community.map((image) => (
              <div class="gallery-item">
                <Image
                  src={image.src}
                  alt={image.alt}
                  loading="lazy"
                  width={800}
                  height={600}
                  quality={80}
                />
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <section class="gallery-section section-alt" id="suites">
      <div class="container">
        <div class="section-header text-center">
          <h2>Private Suites</h2>
          <p class="section-description">
            Spacious, comfortable accommodations with modern amenities and
            safety features
          </p>
        </div>
        <div class="gallery-grid gallery-grid-2">
          {
            galleryImages.suites.map((image) => (
              <div class="gallery-item">
                <Image
                  src={image.src}
                  alt={image.alt}
                  loading="lazy"
                  width={800}
                  height={600}
                  quality={80}
                />
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <section class="gallery-section" id="room-details">
      <div class="container">
        <div class="section-header text-center">
          <h2>Room Details</h2>
          <p class="section-description">
            Double rooms and accessible bathrooms designed for comfort and
            safety
          </p>
        </div>
        <div class="gallery-grid gallery-grid-2">
          {
            galleryImages.roomDetails.map((image) => (
              <div class="gallery-item">
                <Image
                  src={image.src}
                  alt={image.alt}
                  loading="lazy"
                  width={800}
                  height={600}
                  quality={80}
                />
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <section class="gallery-section section-alt" id="dining">
      <div class="container">
        <div class="section-header text-center">
          <h2>Dining Experience</h2>
          <p class="section-description">
            Restaurant-quality meals in a warm, social atmosphere
          </p>
        </div>
        <div class="gallery-grid gallery-grid-2">
          {
            galleryImages.dining.map((image) => (
              <div class="gallery-item">
                <Image
                  src={image.src}
                  alt={image.alt}
                  loading="lazy"
                  width={800}
                  height={600}
                  quality={80}
                />
              </div>
            ))
