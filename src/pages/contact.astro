---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Hero from "../components/Hero.astro";

export const prerender = true;
---

<!-- <div>
  <h1>Coming soon</h1>
</div> -->
<Layout
  title="Contact Trinity Garden Assisted Living Riverview FL | Schedule a Tour"
  description="Contact Trinity Garden Assisted Living in Riverview, FL to schedule a personal tour, ask questions, or request information. Call (813) 467-9393 or fill out our form. We're here to help 24/7."
  keywords="contact assisted living, schedule tour, senior care consultation, visit assisted living facility, assisted living information, elderly care contact"
  schema={{
    "@context": "https://schema.org",
    "@type": "ContactPage",
    name: "Contact Trinity Garden Assisted Living",
    description:
      "Get in touch to schedule a tour or ask questions about our services",
    mainEntity: {
      "@type": "ContactPoint",
      contactType: "Customer Service",
      telephone: "+1-813-467-9393",
      email: "admin@trinitygardenalf.com",
      areaServed: "US",
      availableLanguage: ["English"],
      hoursAvailable: {
        "@type": "OpeningHoursSpecification",
        dayOfWeek: [
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday",
          "Saturday",
          "Sunday",
        ],
        opens: "00:00",
        closes: "23:59",
      },
    },
  }}
>
  <Header />

  <Hero
    title="Get in Touch"
    description="We're here to answer your questions and help you discover how Trinity Garden can be the perfect home for your loved one"
    backgroundImage="https://images.unsplash.com/photo-1582213782179-e0d53f98f2ca?w=1920&q=80"
    primaryCTA={{
      text: "Call (813) 467-9393",
      href: "tel:+1-813-467-9393",
      class: "btn-green",
    }}
  />

  <main>
    <section class="contact-info-section">
      <div class="container">
        <div class="contact-grid">
          <div class="contact-card">
            <div class="contact-icon">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                ></path>
              </svg>
            </div>
            <h3>Phone</h3>
            <p><a href="tel:+1-813-467-9393">(813) 467-9393</a></p>
            <p class="contact-detail">Available 24/7 for emergencies</p>
          </div>
          <div class="contact-card">
            <div class="contact-icon">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path
                  d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                ></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <h3>Email</h3>
            <p>
              <a href="mailto:admin@trinitygardenalf.com"
                >admin@trinitygardenalf.com</a
              >
            </p>
            <p class="contact-detail">We'll respond within 24 hours</p>
          </div>
          <div class="contact-card">
            <div class="contact-icon">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="32"
                height="32"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              >
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <h3>Visit Us</h3>
            <p>10522 Walker Vista Dr<br />Riverview, FL 33578</p>
            <p class="contact-detail">Tours available daily by appointment</p>
          </div>
        </div>
      </div>
    </section>

    <section class="calendly-section section-alt">
      <div class="container">
        <div class="calendly-wrapper">
          <div class="calendly-intro">
            <h2>Schedule Your Personal Tour</h2>
            <p>
              Choose a convenient time to visit Trinity Garden and experience
              our warm, caring community firsthand.
            </p>
            <div class="form-benefits">
              <div class="benefit-item">
                <span class="benefit-icon">•</span>
                <span>Tour our beautiful facility</span>
              </div>
              <div class="benefit-item">
                <span class="benefit-icon">•</span>
                <span>Meet our caring staff</span>
              </div>
              <div class="benefit-item">
                <span class="benefit-icon">•</span>
                <span>Discuss care needs</span>
              </div>
              <div class="benefit-item">
                <span class="benefit-icon">•</span>
                <span>Ask questions</span>
              </div>
            </div>
          </div>

          <div
            class="calendly-inline-widget"
            data-url="https://calendly.com/admin-trinitygardenalf/30min?text_color=2dcd65"
            style="min-width:320px;height:700px;"
          >
          </div>
          <script
            type="text/javascript"
            src="https://assets.calendly.com/assets/external/widget.js"
            async></script>
        </div>
      </div>
    </section>

    <section class="map-section">
      <div class="container">
        <div class="section-header text-center">
          <h2>Visit Our Community</h2>
          <p class="section-description">
            We're conveniently located and easy to reach. Stop by for a tour
            anytime.
          </p>
        </div>
        <div class="map-container">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3526.8344!2d-82.3268!3d27.8358!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88c2d1e8b7b9c8e7%3A0x1234567890abcdef!2s10522%20Walker%20Vista%20Dr%2C%20Riverview%2C%20FL%2033578!5e0!3m2!1sen!2sus!4v1234567890123!5m2!1sen!2sus"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Trinity Garden Assisted Living Location"></iframe>
          <div class="map-info">
            <h3>Trinity Garden Assisted Living</h3>
            <p>10522 Walker Vista Dr, Riverview, FL 33578</p>
            <a
              href="https://www.google.com/maps/dir//10522+Walker+Vista+Dr,+Riverview,+FL+33578"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-primary"
            >
              Get Directions
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="faq-section section-alt">
      <div class="container-narrow">
        <div class="section-header text-center">
          <h2>Common Questions</h2>
          <p class="section-description">
            Quick answers to frequently asked questions about our
            community and services
          </p>
        </div>
        <div class="faq-list">
          <div class="faq-item">
            <h3>What is the move-in process?</h3>
            <p>
              Our move-in process is designed to be smooth, supportive, and family-friendly. We begin with a brief consultation and care assessment to ensure we can safely meet your loved one's needs and preferences. Once approved, we guide you through the admission paperwork, review next steps, and coordinate a move-in date that works best for your family.
            </p>
          </div>
          <div class="faq-item">
            <h3>Are transportation services available for residents, including medical appointments and outings?</h3>
            <p>
              We can assist with transportation arrangements for residents to and from medical appointments as needed. To reduce the need for travel, many services are provided on-site by our attending physicians. We also offer adult day services for an additional fee. For other transportation needs, we can coordinate reliable transportation through our trusted partners or provide vendor contact information for scheduling.
            </p>
          </div>
          <div class="faq-item">
            <h3>Which hospitals do you use for emergency care?</h3>
            <p>
              In the event of an emergency, residents may be transported to nearby hospitals in the Riverview area, including AdventHealth-Riverview, St. Joseph's Hospital–South (BayCare), and HCA Florida South Shore Hospital.
            </p>
          </div>
          <div class="faq-item">
            <h3>What activities and engagement opportunities do residents participate in daily?</h3>
            <p>
              Residents enjoy a variety of daily activities designed to support physical wellness, social connection, and cognitive engagement. Our schedule includes gentle exercise, music, games, reminiscing activities, creative arts, and group interaction—along with individualized options based on each resident's interests, abilities, and care needs.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
<style>
  /* Contact Info Section */
  .contact-info-section {
    padding: var(--spacing-3xl) 0 var(--spacing-2xl);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-xl);
  }

  .contact-card {
    text-align: center;
    padding: var(--spacing-xl);
    background-color: var(--color-cream);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .contact-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .contact-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--spacing-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
      135deg,
      var(--color-primary) 0%,
      var(--color-accent) 100%
    );
    border-radius: 50%;
    color: var(--color-white);
  }

  .contact-icon svg {
    width: 32px;
    height: 32px;
  }

  .contact-card h3 {
    font-size: var(--font-size-xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .contact-card p {
    margin-bottom: var(--spacing-xs);
    line-height: 1.6;
  }

  .contact-card a {
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: none;
  }

  .contact-card a:hover {
    color: var(--color-primary-dark);
  }

  .contact-detail {
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    font-style: italic;
  }

  /* Calendly Section */
  .calendly-section {
    padding: var(--spacing-3xl) 0;
  }

  .calendly-wrapper {
    max-width: 1000px;
    margin: 0 auto;
  }

  .calendly-intro {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .calendly-intro h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .calendly-intro p {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-xl);
  }

  .form-benefits {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-md);
    max-width: 600px;
    margin: 0 auto;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
  }

  .benefit-icon {
    color: var(--color-primary);
    font-weight: bold;
    font-size: 1.5rem;
  }

  .calendly-inline-widget {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: none !important;
  }

  /* Map Section */
  .map-section {
    padding: var(--spacing-3xl) 0;
  }

  .section-header {
    margin-bottom: var(--spacing-2xl);
  }

  .section-header h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .section-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto;
  }

  .map-container {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    background-color: var(--color-white);
  }

  .map-container iframe {
    display: block;
    width: 100%;
    border: none;
  }

  .map-info {
    padding: var(--spacing-xl);
    text-align: center;
    background-color: var(--color-cream);
  }

  .map-info h3 {
    font-size: var(--font-size-xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
  }

  .map-info p {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-md);
  }

  /* FAQ Section */
  .faq-section {
    padding: var(--spacing-3xl) 0;
  }

  .faq-list {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    margin-bottom: var(--spacing-xl);
    padding: var(--spacing-xl);
    background-color: var(--color-white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .faq-item h3 {
    font-size: var(--font-size-lg);
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
  }

  .faq-item p {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .form-benefits {
      grid-template-columns: 1fr;
    }

    .benefit-item {
      justify-content: center;
    }

    .calendly-inline-widget {
      height: 900px !important;
    }

    .map-container iframe {
      height: 300px;
    }

    .map-info {
      padding: var(--spacing-md);
    }
  }
</style>
