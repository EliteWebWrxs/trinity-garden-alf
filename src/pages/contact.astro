<Layout
  title="Contact Trinity Garden Assisted Living Riverview FL | Schedule a Tour"
  description="Contact Trinity Garden Assisted Living in Riverview, FL to schedule a personal tour, ask questions, or request information. Call (813) 467-9393 or fill out our form. We're here to help 24/7."
  keywords="contact assisted living, schedule tour, senior care consultation, visit assisted living facility, assisted living information, elderly care contact"
  schema={{
    "@context": "https://schema.org",
    "@type": "ContactPage",
    name: "Contact Trinity Garden Assisted Living",
    description:
      "Get in touch to schedule a tour or ask questions about our services",
    mainEntity: {
      "@type": "ContactPoint",
      contactType: "Customer Service",
      telephone: "+1-813-467-9393",
      email: "admin@trinitygardenalf.com",
      areaServed: "US",
      availableLanguage: ["English"],
      hoursAvailable: {
        "@type": "OpeningHoursSpecification",
        dayOfWeek: [
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday",
          "Saturday",
          "Sunday",
        ],
        opens: "00:00",
        closes: "23:59",
      },
    },
  }}
>
  <Header />

  <Hero
    title="Get in Touch"
    description="We're here to answer your questions and help you discover how Trinity Garden can be the perfect home for your loved one"
    backgroundImage="https://images.unsplash.com/photo-1582213782179-e0d53f98f2ca?w=1920&q=80"
    primaryCTA={{
      text: "Call (813) 467-9393",
      href: "tel:+1-813-467-9393",
      class: "btn-green",
    }}
  />

  <main>
    <section class="contact-info-section">
      <div class="container">
        <div class="contact-grid">
          <div class="contact-card">
            <div class="contact-icon">üìû</div>
            <h3>Phone</h3>
            <p><a href="tel:+1-813-467-9393">(813) 467-9393</a></p>
            <p class="contact-detail">Available 24/7 for emergencies</p>
          </div>
          <div class="contact-card">
            <div class="contact-icon">‚úâÔ∏è</div>
            <h3>Email</h3>
            <p>
              <a href="mailto:admin@trinitygardenalf.com"
                >admin@trinitygardenalf.com</a
              >
            </p>
            <p class="contact-detail">We'll respond within 24 hours</p>
          </div>
          <div class="contact-card">
            <div class="contact-icon">üìç</div>
            <h3>Visit Us</h3>
            <p>10522 Walker Vista Dr<br />Riverview, FL 33578</p>
            <p class="contact-detail">Tours available daily by appointment</p>
          </div>
        </div>
      </div>
    </section>

    <section class="calendly-section section-alt">
      <div class="container">
        <div class="calendly-wrapper">
          <div class="calendly-intro">
            <h2>Schedule Your Personal Tour</h2>
            <p>
              Choose a convenient time to visit Trinity Garden and experience
              our warm, caring community firsthand.
            </p>
            <div class="form-benefits">
              <div class="benefit-item">
                <span class="benefit-icon">‚úì</span>
                <span>Tour our beautiful facility</span>
              </div>
              <div class="benefit-item">
                <span class="benefit-icon">‚úì</span>
                <span>Meet our caring staff</span>
              </div>
              <div class="benefit-item">
                <span class="benefit-icon">‚úì</span>
                <span>Discuss care needs</span>
              </div>
              <div class="benefit-item">
                <span class="benefit-icon">‚úì</span>
                <span>Ask questions</span>
              </div>
            </div>
          </div>

          <div
            class="calendly-inline-widget"
            data-url="https://calendly.com/admin-trinitygardenalf/30min?text_color=2dcd65"
            style="min-width:320px;height:700px;"
          >
          </div>
          <script
            type="text/javascript"
            src="https://assets.calendly.com/assets/external/widget.js"
            async></script>
        </div>
      </div>
    </section>

    <section class="map-section">
      <div class="container">
        <div class="section-header text-center">
          <h2>Visit Our Community</h2>
          <p class="section-description">
            We're conveniently located and easy to reach. Stop by for a tour
            anytime.
          </p>
        </div>
        <div class="map-container">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3526.8344!2d-82.3268!3d27.8358!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88c2d1e8b7b9c8e7%3A0x1234567890abcdef!2s10522%20Walker%20Vista%20Dr%2C%20Riverview%2C%20FL%2033578!5e0!3m2!1sen!2sus!4v1234567890123!5m2!1sen!2sus"
            width="100%"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Trinity Garden Assisted Living Location"></iframe>
          <div class="map-info">
            <h3>Trinity Garden Assisted Living</h3>
            <p>10522 Walker Vista Dr, Riverview, FL 33578</p>
            <a
              href="https://www.google.com/maps/dir//10522+Walker+Vista+Dr,+Riverview,+FL+33578"
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-primary"
            >
              Get Directions
            </a>
          </div>
        </div>
      </div>
    </section>

    <section class="faq-section section-alt">
      <div class="container-narrow">
        <div class="section-header text-center">
          <h2>Common Questions</h2>
          <p class="section-description">
            Quick answers to frequently asked questions about tours and our
            community
          </p>
        </div>
        <div class="faq-list">
          <div class="faq-item">
            <h3>How long does a tour take?</h3>
            <p>
              Tours typically last 45-60 minutes. We'll show you our facility,
              introduce you to staff, and answer all your questions. Feel free
              to take as much time as you need.
            </p>
          </div>
          <div class="faq-item">
            <h3>Can I bring family members on the tour?</h3>
            <p>
              Absolutely! We encourage you to bring the potential resident and
              any family members involved in the decision-making process.
            </p>
          </div>
          <div class="faq-item">
            <h3>What should I bring to the tour?</h3>
            <p>
              Just bring your questions! If you'd like, you can bring a list of
              specific needs or concerns to discuss. We'll provide all the
              information you need about costs and availability.
            </p>
          </div>
          <div class="faq-item">
            <h3>Can I tour on short notice?</h3>
            <p>
              Yes! While we prefer scheduled appointments, we understand that
              sometimes needs arise quickly. Call us and we'll do our best to
              accommodate you.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
<style>
  /* Contact Info Section */
  .contact-info-section {
    padding: var(--spacing-3xl) 0 var(--spacing-2xl);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-xl);
  }

  .contact-card {
    text-align: center;
    padding: var(--spacing-xl);
    background-color: var(--color-cream);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .contact-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .contact-icon {
    font-size: 3.5rem;
    margin-bottom: var(--spacing-md);
  }

  .contact-card h3 {
    font-size: var(--font-size-xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
  }

  .contact-card p {
    margin-bottom: var(--spacing-xs);
    line-height: 1.6;
  }

  .contact-card a {
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: none;
  }

  .contact-card a:hover {
    color: var(--color-primary-dark);
  }

  .contact-detail {
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    font-style: italic;
  }

  /* Calendly Section */
  .calendly-section {
    padding: var(--spacing-3xl) 0;
  }

  .calendly-wrapper {
    max-width: 1000px;
    margin: 0 auto;
  }

  .calendly-intro {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .calendly-intro h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .calendly-intro p {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-xl);
  }

  .form-benefits {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-md);
    max-width: 600px;
    margin: 0 auto;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
  }

  .benefit-icon {
    color: var(--color-secondary);
    font-weight: bold;
    font-size: 1.25rem;
  }

  .calendly-inline-widget {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: none !important;
  }

  /* Map Section */
  .map-section {
    padding: var(--spacing-3xl) 0;
  }

  .section-header {
    margin-bottom: var(--spacing-2xl);
  }

  .section-header h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .section-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto;
  }

  .map-container {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
    background-color: var(--color-white);
  }

  .map-container iframe {
    display: block;
    width: 100%;
    border: none;
  }

  .map-info {
    padding: var(--spacing-xl);
    text-align: center;
    background-color: var(--color-cream);
  }

  .map-info h3 {
    font-size: var(--font-size-xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
  }

  .map-info p {
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-md);
  }

  /* FAQ Section */
  .faq-section {
    padding: var(--spacing-3xl) 0;
  }

  .faq-list {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    margin-bottom: var(--spacing-xl);
    padding: var(--spacing-xl);
    background-color: var(--color-white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .faq-item h3 {
    font-size: var(--font-size-lg);
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
  }

  .faq-item p {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .form-benefits {
      grid-template-columns: 1fr;
    }

    .calendly-inline-widget {
      height: 900px !important;
    }

    .map-container iframe {
      height: 300px;
    }

    .map-info {
      padding: var(--spacing-md);
    }
  }
</style>
