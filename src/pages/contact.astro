---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';

export const prerender = true;
---

<Layout
  title="Contact Trinity Garden Assisted Living Riverview FL | Schedule a Tour"
  description="Contact Trinity Garden Assisted Living in Riverview, FL to schedule a personal tour, ask questions, or request information. Call (813) 467-9393 or fill out our form. We're here to help 24/7."
  keywords="contact assisted living, schedule tour, senior care consultation, visit assisted living facility, assisted living information, elderly care contact"
  schema={{
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "name": "Contact Trinity Garden Assisted Living",
    "description": "Get in touch to schedule a tour or ask questions about our services",
    "mainEntity": {
      "@type": "ContactPoint",
      "contactType": "Customer Service",
      "telephone": "+1-813-467-9393",
      "email": "info@trinitygardenalf.com",
      "areaServed": "US",
      "availableLanguage": ["English"],
      "hoursAvailable": {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
        "opens": "00:00",
        "closes": "23:59"
      }
    }
  }}
>
  <Header />

  <Hero
    title="Get in Touch"
    description="We're here to answer your questions and help you discover how Trinity Garden can be the perfect home for your loved one"
    backgroundImage="https://images.unsplash.com/photo-1582213782179-e0d53f98f2ca?w=1920&q=80"
    primaryCTA={{ text: "Call (813) 467-9393", href: "tel:+1-813-467-9393" }}
  />

  <main>
    <!-- Contact Information -->
    <section class="contact-info-section">
      <div class="container">
        <div class="contact-grid">
          <div class="contact-card">
            <div class="contact-icon">üìû</div>
            <h3>Phone</h3>
            <p><a href="tel:+1-813-467-9393">(813) 467-9393</a></p>
            <p class="contact-detail">Available 24/7 for emergencies</p>
          </div>
          <div class="contact-card">
            <div class="contact-icon">‚úâÔ∏è</div>
            <h3>Email</h3>
            <p><a href="mailto:info@trinitygardenalf.com">info@trinitygardenalf.com</a></p>
            <p class="contact-detail">We'll respond within 24 hours</p>
          </div>
          <div class="contact-card">
            <div class="contact-icon">üìç</div>
            <h3>Visit Us</h3>
            <p>10522 Walker Vista Dr<br>Riverview, FL 33578</p>
            <p class="contact-detail">Tours available daily by appointment</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="contact-form-section section-alt">
      <div class="container">
        <div class="form-wrapper">
          <div class="form-content">
            <div class="form-intro">
              <h2>Schedule Your Personal Tour</h2>
              <p>
                Fill out the form below and a member of our team will contact you within one business day to schedule your personalized tour and answer any questions you may have.
              </p>
              <div class="form-benefits">
                <div class="benefit-item">
                  <span class="benefit-icon">‚úì</span>
                  <span>Tour our beautiful facility</span>
                </div>
                <div class="benefit-item">
                  <span class="benefit-icon">‚úì</span>
                  <span>Meet our caring staff</span>
                </div>
                <div class="benefit-item">
                  <span class="benefit-icon">‚úì</span>
                  <span>Discuss care needs</span>
                </div>
                <div class="benefit-item">
                  <span class="benefit-icon">‚úì</span>
                  <span>Ask questions</span>
                </div>
              </div>
            </div>

            <form class="contact-form" id="contactForm">
              <div class="form-row">
                <div class="form-group">
                  <label for="firstName">First Name *</label>
                  <input
                    type="text"
                    id="firstName"
                    name="firstName"
                    required
                    placeholder="John"
                  />
                </div>
                <div class="form-group">
                  <label for="lastName">Last Name *</label>
                  <input
                    type="text"
                    id="lastName"
                    name="lastName"
                    required
                    placeholder="Doe"
                  />
                </div>
              </div>

              <div class="form-row">
                <div class="form-group">
                  <label for="email">Email Address *</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    placeholder="john.doe@example.com"
                  />
                </div>
                <div class="form-group">
                  <label for="phone">Phone Number *</label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    required
                    placeholder="(555) 123-4567"
                  />
                </div>
              </div>

              <div class="form-group">
                <label for="relationship">Your Relationship to Potential Resident</label>
                <select id="relationship" name="relationship">
                  <option value="">Select an option</option>
                  <option value="adult-child">Adult Child</option>
                  <option value="spouse">Spouse/Partner</option>
                  <option value="sibling">Sibling</option>
                  <option value="other-family">Other Family Member</option>
                  <option value="friend">Friend</option>
                  <option value="professional">Professional/Advisor</option>
                  <option value="self">Myself</option>
                </select>
              </div>

              <div class="form-group">
                <label for="serviceInterest">Services of Interest</label>
                <select id="serviceInterest" name="serviceInterest">
                  <option value="">Select a service</option>
                  <option value="assisted-living">Assisted Living</option>
                  <option value="memory-care">Memory Care</option>
                  <option value="respite-care">Respite Care</option>
                  <option value="personal-care">Personal Care</option>
                  <option value="not-sure">Not Sure Yet</option>
                </select>
              </div>

              <div class="form-group">
                <label for="timeframe">Expected Timeframe</label>
                <select id="timeframe" name="timeframe">
                  <option value="">Select a timeframe</option>
                  <option value="immediate">Immediate Need (Within 1 month)</option>
                  <option value="1-3-months">1-3 Months</option>
                  <option value="3-6-months">3-6 Months</option>
                  <option value="6-12-months">6-12 Months</option>
                  <option value="planning">Just Planning Ahead</option>
                </select>
              </div>

              <div class="form-group">
                <label for="preferredTourDate">Preferred Tour Date (Optional)</label>
                <input
                  type="date"
                  id="preferredTourDate"
                  name="preferredTourDate"
                />
              </div>

              <div class="form-group">
                <label for="message">Message / Questions</label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  placeholder="Tell us about your needs, questions, or any special requests..."
                ></textarea>
              </div>

              <div class="form-group">
                <label class="checkbox-label">
                  <input
                    type="checkbox"
                    name="newsletter"
                    id="newsletter"
                  />
                  <span>I'd like to receive helpful information about senior care via email</span>
                </label>
              </div>

              <div class="form-actions">
                <button type="submit" class="btn btn-primary btn-large">
                  Submit Request
                </button>
              </div>

              <p class="form-note">
                * Required fields. We respect your privacy and will never share your information.
              </p>
            </form>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <section class="map-section">
      <div class="container">
        <div class="section-header text-center">
          <h2>Visit Our Community</h2>
          <p class="section-description">
            We're conveniently located and easy to reach. Stop by for a tour anytime.
          </p>
        </div>
        <div class="map-container">
          <div class="map-placeholder">
            <div class="map-placeholder-content">
              <div class="map-icon">üìç</div>
              <h3>Trinity Garden Assisted Living</h3>
              <p>10522 Walker Vista Dr<br>Riverview, FL 33578</p>
              <a href="https://www.google.com/maps/dir//10522+Walker+Vista+Dr,+Riverview,+FL+33578" target="_blank" rel="noopener noreferrer" class="btn btn-secondary">
                Get Directions
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section section-alt">
      <div class="container-narrow">
        <div class="section-header text-center">
          <h2>Common Questions</h2>
          <p class="section-description">
            Quick answers to frequently asked questions about tours and our community
          </p>
        </div>
        <div class="faq-list">
          <div class="faq-item">
            <h3>How long does a tour take?</h3>
            <p>
              Tours typically last 45-60 minutes. We'll show you our facility, introduce you to staff, and answer all your questions. Feel free to take as much time as you need.
            </p>
          </div>
          <div class="faq-item">
            <h3>Can I bring family members on the tour?</h3>
            <p>
              Absolutely! We encourage you to bring the potential resident and any family members involved in the decision-making process.
            </p>
          </div>
          <div class="faq-item">
            <h3>What should I bring to the tour?</h3>
            <p>
              Just bring your questions! If you'd like, you can bring a list of specific needs or concerns to discuss. We'll provide all the information you need about costs and availability.
            </p>
          </div>
          <div class="faq-item">
            <h3>Can I tour on short notice?</h3>
            <p>
              Yes! While we prefer scheduled appointments, we understand that sometimes needs arise quickly. Call us and we'll do our best to accommodate you.
            </p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>

<script>
  // Form submission handler
  const form = document.getElementById('contactForm') as HTMLFormElement;

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
    const originalText = submitButton.textContent;

    // Disable button and show loading state
    submitButton.disabled = true;
    submitButton.textContent = 'Submitting...';

    // Simulate form submission (replace with actual form handler)
    setTimeout(() => {
      alert('Thank you for your interest in Trinity Garden! We will contact you within one business day to schedule your tour.');
      form.reset();
      submitButton.disabled = false;
      submitButton.textContent = originalText || 'Submit Request';
    }, 1000);

    // In production, you would send the form data to your backend:
    // const formData = new FormData(form);
    // const response = await fetch('/api/contact', {
    //   method: 'POST',
    //   body: formData
    // });
  });
</script>

<style>
  /* Contact Info Section */
  .contact-info-section {
    padding: var(--spacing-3xl) 0 var(--spacing-2xl);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-xl);
  }

  .contact-card {
    text-align: center;
    padding: var(--spacing-xl);
    background-color: var(--color-cream);
    border-radius: var(--radius-lg);
    transition: all var(--transition-base);
  }

  .contact-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .contact-icon {
    font-size: 3.5rem;
    margin-bottom: var(--spacing-md);
  }

  .contact-card h3 {
    font-size: var(--font-size-xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
  }

  .contact-card p {
    margin-bottom: var(--spacing-xs);
    line-height: 1.6;
  }

  .contact-card a {
    color: var(--color-primary);
    font-weight: 600;
    text-decoration: none;
  }

  .contact-card a:hover {
    color: var(--color-primary-dark);
  }

  .contact-detail {
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    font-style: italic;
  }

  /* Contact Form Section */
  .contact-form-section {
    padding: var(--spacing-3xl) 0;
  }

  .form-wrapper {
    max-width: 900px;
    margin: 0 auto;
  }

  .form-intro {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .form-intro h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .form-intro p {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--spacing-xl);
  }

  .form-benefits {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--spacing-md);
    max-width: 600px;
    margin: 0 auto;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: var(--font-size-base);
    color: var(--color-text-secondary);
  }

  .benefit-icon {
    color: var(--color-secondary);
    font-weight: bold;
    font-size: 1.25rem;
  }

  /* Form Styles */
  .contact-form {
    background-color: var(--color-white);
    padding: var(--spacing-2xl);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
  }

  .form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-lg);
  }

  .form-group {
    margin-bottom: var(--spacing-lg);
  }

  .form-group label {
    display: block;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xs);
    font-size: var(--font-size-base);
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 0.875rem;
    font-size: var(--font-size-base);
    font-family: var(--font-primary);
    border: 2px solid var(--color-gray-light);
    border-radius: var(--radius-md);
    transition: border-color var(--transition-base);
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .checkbox-label {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-sm);
    cursor: pointer;
    font-weight: 400;
  }

  .checkbox-label input[type="checkbox"] {
    width: auto;
    margin-top: 0.25rem;
    cursor: pointer;
  }

  .form-actions {
    margin-top: var(--spacing-xl);
    text-align: center;
  }

  .form-note {
    margin-top: var(--spacing-md);
    font-size: var(--font-size-sm);
    color: var(--color-text-light);
    text-align: center;
  }

  /* Map Section */
  .map-section {
    padding: var(--spacing-3xl) 0;
  }

  .section-header {
    margin-bottom: var(--spacing-2xl);
  }

  .section-header h2 {
    font-size: var(--font-size-2xl);
    color: var(--color-primary);
    margin-bottom: var(--spacing-md);
  }

  .section-description {
    font-size: var(--font-size-lg);
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto;
  }

  .map-container {
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .map-placeholder {
    background: linear-gradient(135deg, var(--color-primary-light) 0%, var(--color-primary) 100%);
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .map-placeholder-content {
    text-align: center;
    color: var(--color-white);
    padding: var(--spacing-xl);
  }

  .map-icon {
    font-size: 4rem;
    margin-bottom: var(--spacing-md);
  }

  .map-placeholder-content h3 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--spacing-sm);
  }

  .map-placeholder-content p {
    margin-bottom: var(--spacing-lg);
    opacity: 0.95;
  }

  /* FAQ Section */
  .faq-section {
    padding: var(--spacing-3xl) 0;
  }

  .faq-list {
    max-width: 800px;
    margin: 0 auto;
  }

  .faq-item {
    margin-bottom: var(--spacing-xl);
    padding: var(--spacing-xl);
    background-color: var(--color-white);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
  }

  .faq-item h3 {
    font-size: var(--font-size-lg);
    color: var(--color-primary);
    margin-bottom: var(--spacing-sm);
  }

  .faq-item p {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin: 0;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .form-row {
      grid-template-columns: 1fr;
    }

    .contact-form {
      padding: var(--spacing-lg);
    }

    .form-benefits {
      grid-template-columns: 1fr;
    }

    .map-placeholder {
      height: 300px;
    }
  }
</style>
